@model Dictionary<ABF.Data.ABFDbModels.Event, int>

@{
    ViewBag.Title = "AllTicketQuantities";
}

<h2>Ticket Sales</h2>

<table class="table">
    <thead class="thead-dark">
        <tr class="thead-dark">
            <th scope="col">Event Id</th>
            <th scope="col">Event Name</th>
            <th scope="col">Event Author</th>
            <th scope="col">Event Date</th>
            <th scope="col">Capacity</th>
            <th scope="col">Ticket Sales</th>
            <th scope="col">Availability</th>
            <th scope="col">% Sold</th>
        </tr>
    </thead>

    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Key.Id</td>
            <td>@e.Key.Name</td>
            <td>@e.Key.Author</td>
            <td>@e.Key.Date.ToString("ddd dd MMM")</td>
            <td>@e.Key.Capacity</td>
            <td>@e.Value</td>
            <td>
                @{
                    var avail = (e.Key.Capacity - e.Value).ToString();
                    if (avail == "0")
                    {
                        avail = "Sold Out";
                    }
                }
                @avail
            </td>
            <td>
                @{ decimal perc = e.Value / e.Key.Capacity; }
                @perc
            </td>
        </tr>
    }
</table>