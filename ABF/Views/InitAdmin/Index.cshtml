@{
    ViewBag.Title = "Init Admin";
}

<h2>Init Identity</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Enter the user details for the account you wish to make Admin.</h4>
    <h5>The user must already be registered as a standard user</h5>
    <hr />
    <div class="form-group">
        <label class = "col-md-2 control-label">Admin Email</label>
        <div class="col-md-10">
            <input type="text" name="adminUserEmail" />
        </div>
    </div><br/><br/>
    <div class="form-group">
        <label class="col-md-2 control-label">Admin Password</label>
        <div class="col-md-10">
            <input type="password" name="adminPassword" />
        </div>
    </div><br /><br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-info" value="Initialize Identity" />
        </div>
    </div>
}