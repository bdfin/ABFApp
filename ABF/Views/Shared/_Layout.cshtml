<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appledore Book Festival</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.0/css/all.css" integrity="sha384-Mmxa0mLqhmOeaE8vgOSbKacftZcsNYDjQzuCOm6D02luYSzBG8vpaOykv9lFQ51Y" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-md fixed-top navbar-light bg-light">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="@Url.Action("Index", "Home")" class="navbar-left"><img src="/Content/SiteImages/appledore-book-festival-logo-navbar-small.png"></a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">

                <ul class="nav navbar-nav mr-auto">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin Console
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("Events", "Index", "AdminEvents", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Locations", "Index", "AdminLocations", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Customers", "Index", "AdminCustomers", null, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Admin Console", "Index", "Admin", null, new { @class = "dropdown-item" })
                            </div>
                        </li>
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Browse Events", "Index", "Bookings", null, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Membership", "Membership", "Basket", null, new { @class=  "nav-link" })
                    </li>

                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content h-100 pb-5">
        @RenderBody()
    </div>

    <footer class="navbar mt-5" id="footer">
        <ul class="list-group list-group-horizontal d-flex justify-content-center text-center">
            <li class="list-group-item">
                <small>@Html.ActionLink("About Us", "About", "Home")</small>
            </li>

            <li class="list-group-item">
                <small>@Html.ActionLink("Local Information", "Visit", "Home")</small>
            </li>

            <li class="list-group-item">
                <small>@Html.ActionLink("FAQ", "FAQs", "Home")</small> 
            </li>

            <li class="list-group-item">
                <small>@Html.ActionLink("Contact Us", "Contact", "Home")</small>
            </li>

            <li class="list-group-item">
                <small>@Html.ActionLink("Our Policies", "Cookies", "Home")</small>
            </li>

            <li class="list-group-item">
                <small>@Html.ActionLink("Ts & Cs", "TermsConditions", "Home")</small>
            </li>
            <li class="list-group-item">
                <small>&copy; Copyright 2019 by The Appledore Book Festival SIC. All Rights Reserved | Charity Commission number (1171761) | Company number (10016211)</small>
            </li>
        </ul>
    </footer>

    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
