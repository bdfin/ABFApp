<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.0/css/all.css" integrity="sha384-Mmxa0mLqhmOeaE8vgOSbKacftZcsNYDjQzuCOm6D02luYSzBG8vpaOykv9lFQ51Y" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-md fixed-top navbar-light bg-light">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="@Url.Action("Index","Home")" class="navbar-left"><img src="/Content/SiteImages/appledore-book-festival-logo-navbar-small.png" ></a>
            <li class="navbar-collapse collapse" id="navbarSupportedContent">

                <ul class="nav navbar-nav mr-auto">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin Console
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("Events", "Index", "AdminEvents", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Locations", "Index", "AdminLocations", null, new { @class = "dropdown-item" })
                                @Html.ActionLink("Customers", "Index", "AdminCustomers", null, new { @class = "dropdown-item" })
                                <div class="dropdown-divider"></div>
                                @Html.ActionLink("Admin Console", "Index", "Admin", null, new { @class = "dropdown-item" })
                            </div>
                        </li>
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Browse Events", "", "", new { @class = "nav-link" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Membership", "", "", new { @class = "nav-link" })
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            About Us
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("About Us", "", "", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Local Information", "", "", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("FAQ", "", "", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Contact Us", "", "", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Our Policies", "", "", null, new { @class = "dropdown-item" })


                        </div>
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

  
        

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/lib")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
</body>
</html>
