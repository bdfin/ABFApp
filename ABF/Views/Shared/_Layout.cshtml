                            </div>
                        </li>
                    }

                    <li class="nav-item">
                        @Html.ActionLink("Browse Events", "Index", "Bookings", null, new { @class = "nav-link" })
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Membership", "Membership", "Basket", null, new { @class = "nav-link" })
                    </li>

                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

