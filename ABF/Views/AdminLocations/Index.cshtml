@model IEnumerable<ABF.Data.ABFDbModels.Location>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string menuId = "adminMenu";
}

<h2>Locations</h2>

<p>
    @Html.ActionLink("New Location", "New", "AdminLocations", htmlAttributes: new { @class = "btn btn-success shadow-sm" })
</p>
<table id="locations" class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Address1)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.PostCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostCode)
                </td>
                <td class="text-center">
                    <p>
                        <button class="btn btn-outline-info shadow-sm" type="button" data-toggle="collapse" data-target="#@menuId" aria-expanded="false" aria-controls="@menuId">
                            Menu
                        </button>
                    </p>
                    <div class="collapse" id="@menuId">
                        <div class="card card-body menu-links">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-block shadow-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-block shadow-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info btn-block shadow-sm" })
                        </div>
                    </div>               
                </td>
            </tr>
            menuId = menuId + 1;
        }
    </tbody>
</table>

@section scripts
    {
    <script>
        $(document).ready(function () {
            $("#locations").dataTable();
        });
    </script>
}